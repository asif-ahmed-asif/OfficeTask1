@model IEnumerable<EmployeeMVC.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<div class="row pt-4">
    <div class="col-6">
        <h2>List of Employees</h2>
    </div>
    <div class="col-6 text-end">
        @Html.ActionLink("Add Employee", "Create", null, new { @class = "btn btn-primary" })
    </div>
</div>
<br />
<table class="table table-hover table-bordered table-striped" style="width:100%">
    <thead>
        <tr class="text-center">
            <th>#</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Department</th>
            <th>Designation</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            int counter = 1;
        }
        @foreach (var employee in Model)
        {
            <tr class="text-center" id="@employee.EmpId">
                <td>
                    @counter
                </td>
                <td>
                    @employee.Name
                </td>
                <td>
                    @employee.Email
                </td>
                <td>
                    @employee.Mobile
                </td>
                <td>
                    @employee.Department.Name
                </td>
                <td>
                    @employee.Designation.Name
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = employee.EmpId }, new { @class = "btn btn-success" })
                    <button type="button" class="btn btn-danger" onclick="deletealert(@employee.EmpId)">Delete</button>
                </td>
            </tr>
            counter++;
        }
    </tbody>
</table>

@section Scripts{
    <script>
        var empid;
        function deletealert(id) {
            empid = id;
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post(`/Employee/Delete?id=${id}`, function (success) {
                        document.getElementById("empid").remove();
                    });

                }
            })
        }

    </script>
}
